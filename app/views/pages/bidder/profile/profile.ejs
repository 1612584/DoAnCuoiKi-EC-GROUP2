<% var rootPath = '../../../'; %>
<% var sidebar_active = 1; %>


<!DOCTYPE html>
<html lang="en">
<%- include(rootPath + 'elements/guest/header.ejs')%>

<body>
    <%- include(rootPath + 'elements/guest/navbar.ejs')%>
    <div class="container my-3">
        <div class="alert alert-success hidden" role="alert">
            
        </div>
    </div>
    <div class="container ">
        <div class="alert alert-danger hidden" role="alert">
            
        </div>
    </div>
    <!-- Begin Main -->
    <main class="site-main">
        <!--================Blog Area =================-->
        <section class="blog_area single-post-area py-80px section-margin--small">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4">
                        <%- include(rootPath + 'elements/bidder/sidebar.ejs')%>
                    </div>
                    <div class="col-lg-8 posts-list">
                        <div class="info-form">
                            <h4>Thông tin tài khoản</h4>
                            <form id="change_profile">
                                <div class="form-group row">
                                    <label for="name" class="col-sm-2 col-form-label">Họ tên</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="fullName" id="name" value="<%= fullName%>"
                                            onfocus="this.placeholder = ''" >
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="email" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <input type="email" class="form-control" name="email" id="email" value="<%= email %>">
                                    </div>
                                </div>
                                
                                <button type="submit" class="button button-postComment button--active btn-sm">Lưu</button>
                            </form>
                        </div>
                        <div class="info-form mt-4">
                            <h4>Đổi mật khẩu</h4>
                            <form id="change_pass">
                                <div class="form-group row">
                                    <label for="password" class="col-sm-2 col-form-label">Mật khẩu mới</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="password" placeholder="Nhập mật khẩu"
                                            onfocus="this.placeholder = ''" onblur="this.placeholder = 'Nhập mật khẩu'">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="repassword" class="col-sm-2 col-form-label">Xác nhận mật khẩu</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="repassword"
                                            placeholder="Nhập mật khẩu" onfocus="this.placeholder = ''"
                                            onblur="this.placeholder = 'Nhập mật khẩu'">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="oldpassword" class="col-sm-2 col-form-label">Mật khẩu cũ</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="oldpassword"
                                            placeholder="Nhập mật khẩu">
                                    </div>
                                </div>
                                <button type="submit" class="button button-postComment button--active btn-sm">Xác nhận</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </section>
        <!--================Blog Area =================-->

    </main>

    <!-- End Main -->

    <%- include(rootPath +  'elements/guest/footer.ejs')%>

    <%- include(rootPath + 'elements/guest/commonJs.ejs')%>
    <%- include(rootPath + 'elements/bidder/sidebarActive.ejs', {sidebar_active: sidebar_active})%>
    <script src="/js/bidder/profile.js"></script>
</body>

</html>