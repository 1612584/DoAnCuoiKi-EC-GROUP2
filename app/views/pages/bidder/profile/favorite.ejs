<% var rootPath = '../../../'; %>
<% var sidebar_active = 2; %>


<!DOCTYPE html>
<html lang="en">
<%- include(rootPath + 'elements/guest/header.ejs')%>

<body>
    <%- include(rootPath + 'elements/guest/navbar.ejs')%>
    <!-- Begin Main -->
    <main class="site-main">
        <!--================Blog Area =================-->
        <section class="blog_area single-post-area py-80px section-margin--small">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4">
                        <%- include(rootPath + 'elements/bidder/sidebar.ejs')%>

                    </div>
                    <div class="col-lg-8">
                        <div class="info-list">
                            <h4 class="info-list-title">Sản phẩm yêu thích</h4>
                            <!-- Search form -->
                            <div class="mb-4 col-6 offset-7">
                                <form class="form-inline md-form form-sm mt-0">
                                    <i class="fas fa-search" aria-hidden="true"></i>
                                    <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search"
                                        aria-label="Search">
                                </form>
                            </div>
                            
                            <div class="comment_list">
                                <% favoriteList.forEach(product => {%>
                                    <div class="review_item">
                                        <div class="media">
                                            <div class="d-flex">
                                                <img width=150 height=100 src="<%= product.product.images.main %>" alt="">
                                            </div>
                                            <div class="media-body">
                                                <h4><a href="/products/detail/<%= product.product._id%>"><%= product.product.name %></a> </h4>
                                                <h5><%= product.product.priceCurrent %> vnđ</h5>
                                                <a class="remove_btn" href="#">Xóa</a>
                                            </div>
                                        </div>
                                        <div class="dropdown-divider"></div>
    
                                    </div>
                                <%}) %>
                                
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </section>
        <!--================Blog Area =================-->

    </main>

    <!-- End Main -->

    <%- include(rootPath +  'elements/guest/footer.ejs')%>

    <%- include(rootPath + 'elements/guest/commonJs.ejs')%>
    <%- include(rootPath + 'elements/bidder/sidebarActive.ejs', {sidebar_active: sidebar_active})%>

</body>

</html>